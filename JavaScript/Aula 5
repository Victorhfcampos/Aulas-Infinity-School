let peso = Number(prompt('Digite o seu peso: '));
let altura = Number(prompt('Digite a sua altura: '));
let imc = peso / altura ** 2;

if (imc < 18.5) {
    alert('IMC abaixo do peso!');
}
else if (imc >= 18.5 && imc < 25) {
    alert('Peso normal!');
}
else if (imc >= 25 && imc < 30) {
    alert('IMC acima do peso!');
}
else {
    alert('Obesidade');
}
