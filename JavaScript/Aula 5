let contador = 0; 

while (contador < 10) { // 0 1 2 3 4 5->false
    console.log(contador); // 0 1 2 3 4
    contador++; // 1 2 3 4 5
    // i = i + 1 ou i += 1
}
console.log('Saimos do while!')
--------------------------------------------------------

let contador = 0;

while (contador < 10) {
    let nota = prompt('Digite a nota: ');
    contador++;
}
