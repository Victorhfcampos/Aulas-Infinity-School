for (let x = 0; x<100; x+=2){
    console.log(x)
}

while (true) {
    console.log('infinity')
    break
}

for (let i = 0; i<100; i++){
    console.log(i)
    if (i == 50){
        alert('fim do loop')
        break
    }
}

let num = Number(prompt('Digite um número: '));
for(let i = 1; i <= 10; i++) {
    console.log(`${num} X ${i} = ${num * i}`);
}

