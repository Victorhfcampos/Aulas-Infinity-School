// Como criar um array?
//                  0       1           2       3          4
let carrinho = ['Mouse', 'Teclado', 'Monitor', 'SSD', 'Mousepad'];
console.log(carrinho);

// Arrays são indexados
console.log(carrinho[2]);

// Como alterar um item em um array?
carrinho[2] = 'Monitor 144hz';
console.log(carrinho);

