// Como saber o tamanho de um array?
// let carrinho = ['Mouse', 'Teclado', 'Monitor', 'SSD', 'Mousepad'];
// console.log(carrinho.length); // 5
// let notas = [5.9, 7.1, 8.2, 8.3];

// let media = (notas[0] + notas[1] + notas[2] + notas[3]) / notas.length;
// console.log(`Média = ${media}`);

let carrinho = ['Mouse', 'Teclado', 'Monitor', 'SSD', 'Mousepad'];
/* Percorrendo um array */
for (let indice = 0; indice < carrinho.length; indice++) {
    if (carrinho[indice] == 'Teclado') {
        console.log('Produto não disponível');
    }
    else {
        console.log(carrinho[indice]);
    }
}

// Considere o seguinte array [10, 15, 17, 22, 9, 4].
// Escreva um algoritmo que percorra o array e conte a quantidade de números pares nela. (você precisará usar contadores).
// Ao final exiba essa quantidade.

// let num = [10, 15, 17, 22, 9, 4]; { 

// }
// const par = x => x % 2 === 0
// const numeros = [10, 15, 17, 22, 9, 4]
// let pares = []

// for (i = 0; i < numeros.length; i++) {
//   if (par(numeros[i])) {
//     pares.push(numeros[i])
//   }
// }
// console.log(pares)

let array = [10, 15, 17, 22, 9, 4]
let contador = 0;
for (let i = 0; i < array.length; i++) {
  if (array[i] % 2 == 0) {
    contador++;
  }
}
console.log(contador);

let carrinho = ['Mouse', 'Teclado', 'Monitor', 'SSD', 'Mousepad'];
console.log(carrinho);

// Como apagar o ultimo item?
// função => array.pop();
carrinho.pop();
console.log(carrinho);

// Como adicionar ultima posição:
// função => array.push(<item>);
carrinho.push('Placa de vídeo');
console.log(carrinho);

// Como remover da primeira posição:
// função => array.shift();
carrinho.shift();
console.log(carrinho);

// Como adicionar na primeira posição?
// função => array.unshift(<item>);
let item = prompt('Digite o produto: ');
carrinho.unshift(item);
console.log(carrinho);

// Como deletar em qualquer posição?
// função => splide(indice, 1)
carrinho.splice(2, 1);
console.log(carrinho);

// Como adicionar em qualquer posição:
// função => splice(indice, 0, <item>)
carrinho.splice(2, 0, 'Gabinete');
console.log(carrinho);

