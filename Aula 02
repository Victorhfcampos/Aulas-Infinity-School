Atividade 08
if temperatura <=37:
    print("Você está com temperatura normal")
elif (temperatura >37) and (temperatura <=37.8):
    print("Você está febril")
elif (temperatura >37.8) and (temperatura <=38.5):
    print("Você está com febre leve")
elif (temperatura >38.5) and (temperatura <=39.4):
    print("Você está com febre moderada")
else:
    print("Você está com febre grave!")

Atividade Monitor
usuario = input("Informe o usuário:"))
senha = input("Insira a senha:"))

if usuario.upper() == "INFINITY" and senha == "school":
    print("LOGIN REALIZADO")
else:
    print("ACESSO NEGADO")

Atividade 11
nome = input("Qual o nome do aluno:")
nota1 = float(input("Qual a nota 1?"))
nota2 = float(input("Qual a nota 2?"))

media = (nota1 + nota2) / 2

if media > 7.0:
    print(f"O aluno(a) {nome} teve a média {media:.2f} e foi aprovado com conceito A")
elif media >= 5.0 and media <=7.0:
    print(f"O aluno(a) {nome} teve a média {media:.2f} e foi aprovado com conceito B")
elif media >= 4.0 and media < 5.0:
    print(f"O aluno(a) {nome} teve a média {media:.2f} e fará avaliação final")
else:
    print(f"O aluno(a) {nome} teve a média {media:.2f} e infelizmente foi reprovado :(")
