numero = int(input("Digite um número:"))
if numero > 0:
    print("Este número é positivo")
elif numero < 0:
    print("Este número é negativo")
else:
    print("Voce digitou zero")

velocidade = int(input("Informe a velocidade do motorista:"))
if velocidade <= 60:
    print("Velocidade permitida")
elif (velocidade >= 60) and (velocidade <= 80):
    print("Alta velocidade")
elif (velocidade >= 80) and (velocidade <= 120):
    print("Muito rapido")
else:
    print("VUADO")
    
Atividade 06
peso = float(input("Qual o seu peso?"))
altura = float(input("Qual a sua altura?"))

imc = peso / (altura**2)

if imc < 18.5:
    print("Você está abaixo do peso")
elif (imc >=18.5) and (imc <=24.9):
    print("Seu peso está normal")
elif (imc >24.9) and (imc <=29.9):
    print("Você está com sobrepeso")
elif (imc >29.9) and (imc <=39.9):
    print("Você está com obesidade tipo I")
else:
    print("Alerta: você está com obesidade mórbida")

Atividade 07
numero_secreto = 27

palpite = int(input("Digite o seu palpite:"))

if palpite < numero_secreto:
    print("Seu palpite é menor que o número secreto!")
elif palpite > numero_secreto:
    print("Seu palpite é maior que o número secreto!")
else:
    print("Parabéns, você acertou!")
    
