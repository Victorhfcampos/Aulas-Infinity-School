    margin: 0;
    padding: 0;
    /*box-sizing: border-box; */
}

p {
    color: #384eb0;
    font-family: 'Roboto', sans-serif;
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    /*margin: 5px 0 5px 5px; acima/direita/abaixo/esquerda */
    /* margin: 5px 0 acima-abaixo*/
    background-color: #745c1aca; /* cor de fundo */
    max-width: max-content; /* largura máxima do elemento */
    border-color: black; /* cor da borda */
    border-width: 2px; /* largura da borda */
    border-style: solid; /*  estilo da borda (solid/dotted/dashed/etc)*/
    border-radius: 5px; /* arredondamento das bordas (quanto maior, mais redondo) */
    padding: 3px; /* preenchimento*/
}

